{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build-run (release)",
      "type": "shell",
      "command": "mkdir -p bin && gcc src/main.c -std=c17 -Wall -Wextra -O2 -o bin/app && ./bin/app",
      "problemMatcher": "$gcc",
      "group": "build"
    },
    {
      "label": "build-run (debug)",
      "type": "shell",
      "command": "mkdir -p bin && gcc src/main.c -std=c17 -Wall -Wextra -O0 -g -DDEBUG -o bin/app && ./bin/app",
      "problemMatcher": "$gcc",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}
